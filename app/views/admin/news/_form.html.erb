<%= form_for [:admin, @news], html: { class: "form-horizontal" } do |f| %>
<div class="control-group">
  <label class="control-label" for="inputEmail">标题</label>
  <div class="controls">
    <%= f.text_field :title %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="inputPassword">图片</label>
  <div class="controls">
    <%= f.file_field :image %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="inputPassword">内容</label>
  <div class="controls">
    <%= f.kindeditor :content, :window_onload => true %>
  </div>
</div>
<div class="control-group">
  <div class="controls">
    <button type="submit" class="btn">提交</button>
  </div>
</div>
<% end %>