<ol class="breadcrumb">
  <li class="active">网站新闻列表</li>
</ol>
<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr class="active">
        <th>内容名称</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.created_at.to_date %></td>
        <td>
          <%= current_user.admin? ? (link_to "编辑", edit_admin_news_path(news)) : (link_to "查看", [:admin, news]) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @newses, :renderer => BootstrapPagination::Rails %>