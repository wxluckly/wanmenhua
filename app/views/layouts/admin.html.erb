<!DOCTYPE html>
<html>
<head>
  <title>万门华管理后台</title>
  <%= stylesheet_link_tag "admin", media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="../">万门华管理后台</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li <%= sanitize 'class="active"' if params[:controller] == "admin/orders" %> ><%= link_to "订单管理", admin_orders_path %></li>
            <li <%= sanitize 'class="active"' if params[:controller] == "admin/cards" %> ><%= link_to "VIP卡管理", admin_cards_path %></li>
          </ul>
          <%= image_tag "admin_logo.jpg", class: "pull-right", height: 44 %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
  <%= javascript_include_tag "application" %>
  <%= yield :js %>
</body>
</html>
