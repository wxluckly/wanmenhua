<!DOCTYPE html>
<html>
<head>
  <title>万门华管理后台</title>
  <%= stylesheet_link_tag "admin", media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="../" class="navbar-brand">万门华管理后台</a>
      </div>
      <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <li <%= sanitize 'class="active"' if current_page?(admin_orders_path)%> ><%= link_to "订单管理", admin_orders_path %></li>
          <li <%= sanitize 'class="active"' if current_page?(admin_cards_path)%> ><%= link_to "VIP卡管理", admin_cards_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= image_tag "admin_logo.png", height: "50" %>
        </ul>
      </nav>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
  <%= javascript_include_tag "application" %>
  <%= yield :js %>
</body>
</html>
