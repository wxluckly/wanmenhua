<div class="main-content">
  <div class="title-bread clearfix">
    <div class="content clearfix">
      <div class="left-bread pull-left">
        <h3><span>公司新闻</span><small>Company News</small></h3>
      </div>
      <div class="right-bread pull-right">&nbsp;</div>
    </div>
  </div>

  <div class="left-right">
    <div class="content">
      <div class="box box-in">
        <h3 class="artic-title"><%= @news.title %></h3>
        <div class="artic-info text-center">
          <span>时间：<%= @news.created_at.to_date %></span>
        </div>
        <div class="artic-detail">
          <%= sanitize @news.content %>
        </div>
      </div>
    </div>
  </div>
</div>